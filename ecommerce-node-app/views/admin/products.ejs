<body class="bg-amber-50">

        <%- include('../includes/admin-panel-navigation.ejs') %>
    <main class="flex gap-4 flex-wrap">
        <% if (rows.length > 0) {%>
            <% for(let row of rows) { %>
                <div class="w-64 h-fit justify-center flex flex-col products">

                    <img src='../../<%= row.Image %>' class="w-full h-40">
                    <p><%= row.product_name %></p>
                    <p><%= row.product_description %></p>
                    <p><%= row.product_price %></p>
                    <p><a href="/edit-products?orgName=<%=orgName%>&productId=<%=row.id%>?edit=true">edit</a>|
                        </p>
                    <form action="/delete-products?orgName=<%= orgName %>&productId=<%= row.id %>" method="POST">
                        <input type="hidden" value="DELETE" name="productId" >
                        <button class="btn" type="submit">Delete</button>
                    </form>
                    <!-- <p><a href="/products?orgName=<%=orgName%>">delete</a> -->
                    </p>
                </div>
            <% } %>
        <% } else {%>
            <h1>Product not found</h1>
        <% } %>
            <a href="/add-products?orgName=<%=orgName%>" class="w-16 h-16 bg-slate-400 text-3xl rounded-full py-3 px-5 my-16">+</a>
    </main>

      
<%- include('../includes/end.ejs') %>